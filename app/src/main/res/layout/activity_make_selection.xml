<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeSelection"
    android:background="?attr/colorSecondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/signup_back_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:onClick="back_btn"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back"
            android:transitionName="trans_back_button"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/muli_black"
            android:text="Make\nSelection"
            android:textAllCaps="true"
            android:textColor="?attr/colorPrimary"
            android:textSize="40sp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select which contact detail to use to reset your password:"
            android:textSize="18sp"
            android:fontFamily="@font/muli"
            android:layout_marginLeft="30dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/login_rounded_background"
            android:padding="10dp"
            android:layout_marginHorizontal="30dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/msg_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_message"
                android:layout_centerVertical="true"
                app:tint="?attr/colorPrimary"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/msg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via SMS:"
                android:layout_marginTop="35dp"
                android:textSize="25sp"
                android:fontFamily="@font/muli"
                android:layout_toRightOf="@+id/msg_icon"/>

            <TextView
                android:id="@+id/msg_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+96171665631"
                android:textColor="?attr/colorPrimary"
                android:textSize="25sp"
                android:fontFamily="@font/muli"
                android:layout_toRightOf="@+id/msg_icon"
                android:layout_below="@+id/msg_title"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_rounded_background"
            android:padding="10dp"
            android:layout_marginHorizontal="30dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/mail_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_mail_outline"
                app:tint="?attr/colorPrimary" />

            <TextView
                android:id="@+id/mail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/mail_icon"
                android:fontFamily="@font/muli"
                android:text="Via Email:"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/mail_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mail_title"
                android:layout_toRightOf="@+id/mail_icon"
                android:fontFamily="@font/muli"
                android:text="aboudehmasri.am@gmail.com"
                android:textColor="?attr/colorPrimary"
                android:textSize="25sp" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>